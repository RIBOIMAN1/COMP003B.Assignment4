@model Article

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text">@Model.Summary</p>
        <a href="@Model.VideoUrl" target="_blank" class="btn btn-outline-primary">Watch Video</a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Reading View</a>
    </div>
</div>